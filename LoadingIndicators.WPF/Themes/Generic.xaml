<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:li="clr-namespace:LoadingIndicators.WPF"
                    xmlns:styles="clr-namespace:LoadingIndicators.WPF.Styles">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/LoadingIndicators.WPF;component/Colors.xaml" />
        <ResourceDictionary Source="pack://application:,,,/LoadingIndicators.WPF;component/Styles/LoadingArc.xaml" />
        <ResourceDictionary Source="pack://application:,,,/LoadingIndicators.WPF;component/Styles/LoadingArcs.xaml" />
        <ResourceDictionary Source="pack://application:,,,/LoadingIndicators.WPF;component/Styles/LoadingArcsRing.xaml" />
        <ResourceDictionary
            Source="pack://application:,,,/LoadingIndicators.WPF;component/Styles/LoadingDoubleBounce.xaml" />
        <ResourceDictionary
            Source="pack://application:,,,/LoadingIndicators.WPF;component/Styles/LoadingFlipPlane.xaml" />
        <ResourceDictionary Source="pack://application:,,,/LoadingIndicators.WPF;component/Styles/LoadingPulse.xaml" />
        <ResourceDictionary Source="pack://application:,,,/LoadingIndicators.WPF;component/Styles/LoadingRing.xaml" />
        <ResourceDictionary
            Source="pack://application:,,,/LoadingIndicators.WPF;component/Styles/LoadingThreeDots.xaml" />
        <ResourceDictionary Source="pack://application:,,,/LoadingIndicators.WPF;component/Styles/LoadingWave.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="LoadingIndicatorArcStyle" TargetType="{x:Type li:LoadingIndicator}"
           BasedOn="{StaticResource LoadingIndicatorArcStyleKey}" />
    <Style x:Key="LoadingIndicatorArcsStyle" TargetType="{x:Type li:LoadingIndicator}"
           BasedOn="{StaticResource LoadingIndicatorArcsStyleKey}" />
    <Style x:Key="LoadingIndicatorArcsRingStyle" TargetType="{x:Type li:LoadingIndicator}"
           BasedOn="{StaticResource LoadingIndicatorArcsRingStyleKey}" />
    <Style x:Key="LoadingIndicatorDoubleBounceStyle" TargetType="{x:Type li:LoadingIndicator}"
           BasedOn="{StaticResource LoadingIndicatorDoubleBounceStyleKey}" />
    <Style x:Key="LoadingIndicatorFlipPlaneStyle" TargetType="{x:Type li:LoadingIndicator}"
           BasedOn="{StaticResource LoadingIndicatorFlipPlaneStyleKey}" />
    <Style x:Key="LoadingIndicatorPulseStyle" TargetType="{x:Type li:LoadingIndicator}"
           BasedOn="{StaticResource LoadingIndicatorPulseStyleKey}" />
    <Style x:Key="LoadingIndicatorRingStyle" TargetType="{x:Type li:LoadingIndicator}"
           BasedOn="{StaticResource LoadingIndicatorRingStyleKey}" />
    <Style x:Key="LoadingIndicatorThreeDotsStyle" TargetType="{x:Type li:LoadingIndicator}"
           BasedOn="{StaticResource LoadingIndicatorThreeDotsStyleKey}" />
    <Style x:Key="LoadingIndicatorWaveStyle" TargetType="{x:Type li:LoadingIndicator}"
           BasedOn="{StaticResource LoadingIndicatorWaveStyleKey}" />

    <Style TargetType="{x:Type li:LoadingIndicator}"
           BasedOn="{styles:MultiStyle LoadingIndicatorArcStyleKey LoadingIndicatorArcsStyle LoadingIndicatorArcsRingStyle LoadingIndicatorDoubleBounceStyle LoadingIndicatorFlipPlaneStyle LoadingIndicatorPulseStyle LoadingIndicatorRingStyle LoadingIndicatorThreeDotsStyle LoadingIndicatorWaveStyle}" />
</ResourceDictionary>